<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <size android:width="185sp"/>
        <size android:height="185sp"/>
            <gradient android:startColor="#B07FC9FF" android:endColor="#B00094FF" android:angle="270"/>
    </shape>
</item>
<item android:state_focused="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval"  >
        <stroke android:width="10sp" android:color="#5e7974" />
        <solid android:color="@drawable/gradient_background"/>
    </shape>
</item>

<item >
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval"  >
        <stroke android:width="3dip" android:color="#000000" />
        <gradient android:angle="-90" android:startColor="#8dbab3" android:endColor="#B07FC9FF" />
    </shape>
</item>
</selector>