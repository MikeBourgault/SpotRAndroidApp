<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:background="@drawable/gradient_background"
    tools:context="com.example.i864514.projectspotr.Main2Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/todaysWorkoutButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/myProgressButton"
            android:background="@drawable/circle_button"
            android:text='TODAY"S WORKOUT'
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/myProgressButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:text="@string/progress"
            android:textStyle="bold"

            android:typeface="serif"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="343dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/userProfileButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/todaysWorkoutButton"
            android:layout_below="@+id/todaysWorkoutButton"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:text="@string/workout"
            android:textStyle="bold"
            android:typeface="serif"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="173dp" />

        <Button
            android:id="@+id/calendarButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:text="@string/weight"
            android:textStyle="bold"
            android:typeface="serif"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="9dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/musicPlaylistsButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/userProfileButton"
            android:layout_below="@+id/userProfileButton"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:text="@string/music"
            android:textStyle="bold"
            android:typeface="serif"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="178dp" />

        <Button
            android:id="@+id/runningMapButton"
            android:layout_width="180dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/calendarButton"
            android:layout_toStartOf="@+id/userProfileButton"
            android:layout_weight="1"
            android:background="@drawable/circle_button"
            android:text="@string/runing"
            android:textStyle="bold"
            android:typeface="serif"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="348dp" />
    </LinearLayout>

</LinearLayout>
